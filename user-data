#cloud-config

# Hostname management
preserve_hostname: False
hostname: kube-master
fqdn: kube-master.enciso.website

# Users
users:
  - name: centos
    groups: ['wheel']
    shell: /bin/bash
    lock_passwd: false
    passwd: $1$SaltSalt$wyNPtXcHHzAJ8I4lp0IxZ0
    sudo: ALL=(ALL) NOPASSWD:ALL
    ssh-authorized-keys:
      - ssh-rsa  jenciso@x420ua

# Configure where output will go
output:
  all: ">> /var/log/cloud-init.log"
 
# configure interaction with ssh server
ssh_genkeytypes: ['rsa']
 
# set timezone for VM
timezone: America/Sao_Paulo

# Remove cloud-init 
runcmd:
  - sed -i "s/ONBOOT=no/ONBOOT=yes/" /etc/sysconfig/network-scripts/ifcfg-eth0
  - echo "DNS1=192.168.122.1" >> /etc/sysconfig/network-scripts/ifcfg-eth0
  - echo "DNS2=1.1.1.1" >> /etc/sysconfig/network-scripts/ifcfg-eth0
  - echo "DOMAIN=enciso.website" >> /etc/sysconfig/network-scripts/ifcfg-eth0
  - ifdown eth0 && sleep 1 && ifup eth0
  - yum -y remove cloud-init
